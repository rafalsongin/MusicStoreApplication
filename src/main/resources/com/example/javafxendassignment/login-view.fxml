<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="340.0"
          prefWidth="440.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.javafxendassignment.controllers.LoginController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="5.0" prefHeight="5.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Button fx:id="loginButton" contentDisplay="CENTER" defaultButton="true" disable="true" mnemonicParsing="false"
            onMouseClicked="#onLoginButtonClick" prefHeight="35.0" prefWidth="159.0"
            style="-fx-background-color: #adc095; -fx-background-radius: 10px; -fx-border-radius: 10px; 
            -fx-border-color: #7a9a51; -fx-border-width: 2px; -fx-font-weight: bold; -fx-font-size: 24px; -fx-font-family: &quot;Segoe UI&quot;"
            text="Login" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="TOP">
        <GridPane.margin>
            <Insets top="5.0"/>
        </GridPane.margin>
    </Button>
    <TextField fx:id="usernameField" prefHeight="35.0" prefWidth="442.0" promptText="Username" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="80.0" right="80.0"/>
        </GridPane.margin>
        <font>
            <Font size="20.0"/>
        </font>
    </TextField>
    <PasswordField fx:id="passwordField" prefHeight="35.0" prefWidth="317.0" promptText="Password"
                   GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="80.0" right="80.0"/>
        </GridPane.margin>
        <font>
            <Font size="20.0"/>
        </font>
    </PasswordField>
    <Label fx:id="passwordInputIncorrectInput" alignment="CENTER" prefHeight="23.0" prefWidth="341.0"
           style="-fx-font-family: &quot;Segoe UI&quot;; -fx-font-size: 20px; -fx-font-style: Italic;"
           text="Username or password is incorrect..." textAlignment="CENTER" textFill="RED"
           GridPane.halignment="CENTER" GridPane.rowIndex="3" visible="false">
    </Label>
    <Label fx:id="passwordInfoMessage" alignment="CENTER" prefHeight="57.0" prefWidth="397.0"
           style="-fx-font-family: &quot;Segoe UI&quot;; -fx-font-size: 20px; -fx-font-style: Italic;"
           text="Password needs to contain at least 1 letter, 1 number, 1 special character!" textAlignment="CENTER"
           textFill="#7a9a51" wrapText="true" GridPane.halignment="CENTER" GridPane.rowIndex="3">
    </Label>
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="56.0" prefWidth="481.0" text="Rafal's Music Dungeon">
        <font>
            <Font name="System Bold Italic" size="30.0"/>
        </font>
    </Label>
</GridPane>
